<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fefefe">
	<RelativeLayout 
		android:id = "@+id/layout_top"
		android:layout_width="fill_parent"
		android:layout_height="38dp"
		android:background="@drawable/bg_top_green">
		<ImageView 
			android:id = "@+id/ic_home"
			android:layout_width="26dp"
			android:layout_height="20dp"
			android:layout_marginLeft="6dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:src="@drawable/ic_home"/>	
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/ic_home"			
			android:textColor = "#ffffff"
			android:textSize="18sp"
			android:text = "Iasianunta"
			android:textStyle="bold"
			android:layout_marginLeft="5dp"			
			android:layout_centerVertical="true"
			android:layout_marginTop="2dp"/>		
		<com.liviu.apps.iasianunta.ui.LEditText 
			android:id = "@+id/edtx_what"
			android:layout_width="150dp"
			android:layout_height="27dp"
			android:textColor="#575757"
			android:hint="Cauta anunturi"			
			android:text = ""
			android:imeOptions="actionSearch"
			android:textSize="12dp"
			android:layout_centerVertical="true"				
			android:paddingLeft="5dp"			
			android:singleLine="true"
			android:layout_marginRight="4dp"
			android:layout_alignParentRight="true"
			android:drawableRight="@drawable/ic_edtx_x"
			android:background="@drawable/edtx_background"/>				
	</RelativeLayout>
	<RelativeLayout 
		android:id = "@+id/layout_top_bar"
		android:layout_width="fill_parent"
		android:layout_height="30dp"
		android:background="@drawable/bg_bar_gray"
		android:layout_below="@id/layout_top">	
		<ImageView 
			android:id = "@+id/user_image"
			android:layout_width="22dp"
			android:layout_height="22dp"
			android:layout_marginLeft="6dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:src="@drawable/ic_no_user_image"/>	
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/user_image"
			android:layout_marginTop="9dp"
			android:textColor = "#777777"
			android:textSize="10sp"  
			android:text = "Holla amigos"
			android:layout_marginLeft="5dp"/>		
		<Button 
			android:id = "@+id/main_but_login"
			android:layout_width="wrap_content"
			android:layout_height="25dp"
			android:textColor="#575757"
			android:text="Logout"					
			android:layout_alignParentRight="true"
			android:layout_marginRight="1dp"
			android:layout_centerVertical="true"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:textSize="10dp"
			android:background="@drawable/button_background"/>  			  				
	</RelativeLayout>
	<RelativeLayout 
		android:id = "@+id/layout_content"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"		
		android:layout_below="@id/layout_top_bar"
		android:layout_above="@+id/layout_bottom">		
		<ScrollView 
			android:id = "@+id/layout_ad_holder"
		  	android:layout_width="fill_parent"
		  	android:layout_height="150dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_alignParentTop="true"			
			android:paddingTop="5dp"
			android:fillViewport="true"
			android:layout_marginBottom="5dp">								
			<RelativeLayout 	
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content"
			  	android:background="@drawable/bg_white"	
				android:paddingLeft="10dp"
				android:layout_marginTop="5dp"
				android:layout_alignParentTop="true"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="10dp">
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_index"
				  	android:layout_width="wrap_content"
				  	android:layout_height="wrap_content"
				  	android:text="0"
					android:paddingRight="3dp"
					android:paddingLeft="3dp"	  	
				  	android:textStyle="bold"
				  	android:textSize="11sp"
				  	android:textColor="#ffffff"
				  	android:layout_marginLeft="3dp"
				  	android:layout_alignParentTop="true"
				  	android:layout_marginTop="5dp"
				  	android:gravity="center"
				  	android:background = "@drawable/bg_blue"
					android:shadowColor="#777777"
					android:shadowDx="0.6"
					android:shadowDy="0.7"
					android:shadowRadius="0.6"/>	
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_category"
				  	android:layout_width="wrap_content"
				  	android:layout_height="wrap_content"
				  	android:text="Imobiliare"
				  	android:textSize="13sp"
				  	android:textColor="#777777"
				  	android:layout_toRightOf = "@id/ad_index"
				  	android:layout_alignParentTop="true"
				  	android:layout_marginLeft = "5dp"
				  	android:layout_marginTop="5dp"
				  	android:gravity="left|center_vertical"/>
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_date"
				  	android:layout_width="wrap_content"
				  	android:layout_height="wrap_content"
				  	android:text="12-12-2012"
				  	android:textSize="10sp"
				  	android:textColor="#777777"
				  	android:layout_alignParentRight="true" 	  
				  	android:layout_marginTop="5dp"
				  	/>  	
				  <View
				  	android:id = "@+id/ad_line1"
				  	android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginTop="3dp"
					android:background="#cccccc"
					android:layout_below="@id/ad_index"/>
	
				  <!-- Title + author -->
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_title"
				  	android:layout_width="fill_parent"
				  	android:layout_height="wrap_content"
				  	android:text="Titlu"
				  	android:textStyle="bold"
				  	android:textSize="15sp"
				  	android:textColor="#777777"
				  	android:layout_below="@id/ad_line1"
				  	android:gravity="left|center_vertical"			  	
				  	android:layout_marginTop="5dp"  	
				  	android:layout_alignParentLeft="true"
				  	android:layout_toLeftOf="@+id/ad_but_call"
				  	android:layout_marginLeft="5dp"/>  	  
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_author"
				  	android:layout_width="fill_parent"
				  	android:layout_height="wrap_content"
				  	android:text="iasianuta.info"  	
				  	android:textSize="11sp"
				  	android:textColor="#777777"
				  	android:layout_below="@id/ad_title"
				  	android:layout_toLeftOf="@id/ad_but_call"
				  	android:gravity="left|center_vertical"
				  	android:layout_alignParentLeft="true"	
				  	android:layout_marginLeft="5dp"/>    
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_views"
				  	android:layout_width="fill_parent"
				  	android:layout_height="wrap_content"
				  	android:text="12 vizualizari"  	
				  	android:textSize="11sp"
				  	android:textColor="#777777"
				  	android:layout_below="@id/ad_author"
				  	android:gravity="left|center_vertical"
				  	android:layout_toLeftOf="@id/ad_but_call"
				  	android:layout_alignParentLeft="true"
				  	android:layout_marginLeft="5dp"/>	  	
				  <com.liviu.apps.iasianunta.ui.LTextView 
				  	android:id = "@+id/ad_content"
				  	android:layout_width="fill_parent"
				  	android:layout_height="wrap_content"
				  	android:text="imobiliare imobilia reitmobilireitmobilireitmobilireitmobilireitmobili reitmobilireitmobili  arei mobi liare  imobi mob ili are imob ili are imo bili are  sdsg  imo biliare imobil ia...."  	
				  	android:textSize="13sp"
				  	android:textColor="#777777"
				  	android:layout_below="@id/ad_views"	  	
				  	android:gravity="left|center_vertical"  	  	
				  	android:layout_marginLeft="3dp"
				  	android:layout_marginTop="5dp"
				  	android:layout_alignWithParentIfMissing="true" /> 	
				  <Button 
				  	android:id = "@id/ad_but_call"
				  	android:layout_width="wrap_content"
				  	android:layout_height="30dp"
				  	android:layout_marginLeft="2dp"
				  	android:background="@drawable/default_button_background"
				  	android:layout_below="@id/ad_line1"
				  	android:layout_alignParentRight="true"
				  	android:textSize="13sp"
				  	android:text = "0761492677"  	
				  	android:textColor="#777777"
				  	android:drawableLeft="@drawable/ic_but_phone"
				  	android:paddingLeft="7dp"
				  	android:paddingRight="7dp"
				  	android:drawablePadding="3dp"
				  	android:gravity="left|center_vertical"
				  	android:layout_marginTop="10dp"/>
			</RelativeLayout>
		</ScrollView>				
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/txt_comments"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft = "true"			
			android:textColor = "@color/text_color"
			android:textSize="13sp"
			android:text = "Comentarii"		
			android:layout_below="@id/layout_ad_holder"	
			android:layout_marginLeft="8dp"/>			
		<View
			android:id = "@+id/line11"
			android:layout_width="fill_parent"	
			android:layout_height="1dp"
			android:background="@color/double_line_color"  
			android:layout_toRightOf="@id/txt_comments"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="8dp"
			android:layout_below="@id/layout_ad_holder"	/>
		<View
			android:id = "@+id/line12"
			android:layout_width="fill_parent"	
			android:layout_height="1dp"
			android:background="@color/double_line_color" 
			android:layout_below="@id/line11"
			android:layout_toRightOf="@id/txt_comments"
			android:layout_marginTop="1dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="2dp"/>
		<ListView
			android:id = '@+id/comments_list'
			android:layout_width="fill_parent"	
			android:layout_height="fill_parent"
			android:layout_below="@id/line12"
			android:cacheColorHint="#00000000"
			android:divider="#00000000"
			android:listSelector="#00000000"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:dividerHeight="0dp"/>	
		<ProgressBar android:id="@+id/load_comments_progress"
	       style="?android:attr/progressBarStyleSmall"
	       android:indeterminateOnly = "true"
	       android:layout_width="15dp"
	       android:layout_height="15dp"   
	       android:visibility="visible"
	       android:layout_marginTop="40dp"   		        
		   android:layout_below="@id/line12"
		   android:layout_centerHorizontal="true"	   
		   android:indeterminateDrawable = "@drawable/progress_small"/>  	  
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/txt_load_comments_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"						   	   					
			android:textColor = "#888888"
			android:textSize="12sp"
			android:visibility="visible"
			android:text = "Preiau comentariile..."							
			android:layout_marginTop="5dp"					
			android:drawableLeft="@drawable/ic_loading"
			android:drawablePadding="5dp"		
			android:gravity="left|center_vertical"
			android:layout_below="@id/load_comments_progress"/>		
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/txt_no_comments"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"						   	   					
			android:textColor = "#888888"
			android:textSize="12sp"
			android:visibility="gone"
			android:text = "Nu exista nici un comentariu."													
			android:drawableLeft="@drawable/ic_but_note"
			android:drawablePadding="5dp"		
			android:gravity="left|center_vertical"
			android:layout_marginTop="60dp"   		        
		   	android:layout_below="@id/line12"/>															
	</RelativeLayout>
	<RelativeLayout 
		android:id = "@id/layout_bottom"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:background="@drawable/bg_bottom_gray8"
		android:layout_alignParentBottom="true">	
		<ProgressBar android:id="@+id/ad_comment_progress"
	       style="?android:attr/progressBarStyleSmall"
	       android:indeterminateOnly = "true"
	       android:layout_width="15dp"
	       android:layout_height="15dp"   
	       android:visibility="gone"          		        
		   android:layout_marginTop="5dp"
		   android:layout_centerHorizontal="true"	   
		   android:indeterminateDrawable = "@drawable/progress_small"/>  	  
		<com.liviu.apps.iasianunta.ui.LTextView
			android:id = "@+id/txt_ad_comment_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"						   	   					
			android:textColor = "#888888"
			android:textSize="12sp"
			android:visibility="gone"
			android:text = "Adaug comentariul dvs..."							
			android:layout_marginTop="5dp"					
			android:drawableLeft="@drawable/ic_loading"
			android:drawablePadding="5dp"		
			android:gravity="left|center_vertical"
			android:layout_below="@id/ad_comment_progress"/>			
		<com.liviu.apps.iasianunta.ui.LEditText 
			android:id = "@+id/edtx_comment"
			android:layout_width="fill_parent"
			android:layout_height="39dp"
			android:textColor="#575757"
			android:hint="Comentariul dvs."			
			android:text = ""				
			android:visibility="visible"		
			android:textSize="12dp"
			android:layout_centerVertical="true"
			android:layout_toLeftOf = "@+id/comments_but_add" 			
			android:paddingLeft="5dp"			
			android:layout_marginLeft="6dp"					
			android:drawableRight="@drawable/ic_edtx_x"
			android:background="@drawable/edtx_background_green"/>	
		  <Button 
		  	android:id = "@id/comments_but_add"
		  	android:layout_width="wrap_content"
		  	android:layout_height="40dp"
		  	android:background="@drawable/default_button_background"		  	
		  	android:layout_alignParentRight="true"
		  	android:layout_centerVertical="true"
		  	android:textSize="13sp"
		  	android:text = "Adauga"  	
		  	android:visibility="visible"		
		  	android:textColor="#777777"
		  	android:drawableLeft="@drawable/ic_plus"
		  	android:paddingLeft="7dp"
		  	android:paddingRight="7dp"
		  	android:drawablePadding="5dp"
		  	android:layout_marginLeft="5dp"
			android:layout_marginRight="6dp"
		  	android:gravity="left|center_vertical"/>	  
	</RelativeLayout>					
</RelativeLayout>
