<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"  
  android:background="@drawable/bg_item_list_white">
  <ImageView 
  	android:id = "@+id/lst_alert_image"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:src="@drawable/ic_but_alert"
  	android:layout_alignParentLeft="true"
  	android:layout_marginTop="25dp"
  	android:layout_marginLeft="8dp"/>
  <com.liviu.apps.iasianunta.ui.LTextView
  	android:id = "@+id/lst_alert_title"
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content"
  	android:text="My alert title"
  	android:textColor="#575757"
  	android:textSize="14sp"
  	android:layout_toRightOf="@id/lst_alert_image"
  	android:layout_toLeftOf="@+id/lst_alert_ads_count"
  	android:layout_alignParentTop="true"
  	android:layout_marginTop="5dp"
  	android:textStyle="bold"
  	android:layout_marginLeft="8dp"/>
  <com.liviu.apps.iasianunta.ui.LTextView
  	android:id = "@+id/lst_alert_added_date"
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content"
  	android:text="addded on"
  	android:textColor="#575757"
  	android:textSize="10sp"
  	android:layout_toRightOf="@id/lst_alert_image"
  	android:layout_below="@id/lst_alert_title"  	
  	android:layout_marginLeft="8dp"
  	android:layout_marginTop="2dp"/> 
  <com.liviu.apps.iasianunta.ui.LTextView
  	android:id = "@+id/lst_alert_last_checked_date"
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content"
  	android:text="last checked on"
  	android:textColor="#575757"
  	android:textSize="10sp"
  	android:layout_toRightOf="@id/lst_alert_image"
  	android:layout_below="@id/lst_alert_added_date"  	
  	android:layout_marginLeft="8dp"
  	android:layout_marginTop="2dp"/>   	 
  <com.liviu.apps.iasianunta.ui.LTextView
  	android:id = "@id/lst_alert_ads_count"
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content"
  	android:text="32"
  	android:textColor="#ffffff"
  	android:textSize="16sp"
  	android:textStyle="bold"
  	android:layout_alignParentRight="true"
  	android:layout_alignParentTop="true"
  	android:layout_marginTop="13dp"
  	android:layout_marginRight="15dp"
  	android:padding="3dp"
  	android:background="@drawable/bg_orange"/>  
  <com.liviu.apps.iasianunta.ui.LTextView
  	android:id = "@+id/lst_alert_txt_ads"
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content"
  	android:text="anunturi"
  	android:textColor="#575757"
  	android:textSize="10sp"
  	android:layout_alignParentRight="true"
  	android:layout_below="@id/lst_alert_ads_count"  	
  	android:layout_marginRight="8dp"
  	android:layout_marginTop="2dp"/>    	
  <View
  	android:id = "@+id/line"
  	android:layout_width="fill_parent"	
  	android:layout_height="1dp"
  	android:layout_below="@id/lst_alert_txt_ads"
  	android:background="#dadada"
  	android:layout_marginTop="5dp"/>	
  <RelativeLayout
	android:id = "@+id/lst_alert_actions_holder"
	android:layout_width="fill_parent" 
	android:layout_height="45dp"
	android:layout_below="@id/line"
	android:visibility="gone"
	android:background="@drawable/bg_bar_gray">
	<Button 
	  	android:id = "@+id/lst_alert_open"
	  	android:layout_width="95dp"
	  	android:layout_height="30dp"
	  	android:background="@drawable/new_button_background"		  	
	  	android:layout_alignParentLeft="true"
	  	android:layout_centerVertical="true"
	  	android:textSize="13sp"
	  	android:text = "Deschide"  			
	  	android:textColor="#575757"
	  	android:drawableLeft="@drawable/ic_but_open_green"
	  	android:paddingLeft="7dp"
	  	android:paddingRight="7dp"
	  	android:drawablePadding="5dp"
	  	android:layout_marginLeft="5dp"
		android:focusable="false"
		android:focusableInTouchMode="false"	  			
	  	android:gravity="left|center_vertical"/>
	<Button 
	  	android:id = "@+id/lst_alert_edit"
	  	android:layout_width="95dp"
	  	android:layout_height="30dp"
	  	android:background="@drawable/new_button_background"		  	
	  	android:layout_centerInParent="true"
	  	android:textSize="13sp"
	  	android:text = "Editeaza"  			
	  	android:textColor="#575757"
	  	android:drawableLeft="@drawable/ic_but_edit"
	  	android:paddingLeft="7dp"
	  	android:paddingRight="7dp"
	  	android:drawablePadding="5dp"
		android:focusable="false"
		android:focusableInTouchMode="false"	  			
	  	android:gravity="left|center_vertical"/>	  	
	<Button 
	  	android:id = "@+id/lst_alert_remove"
	  	android:layout_width="95dp"
	  	android:layout_height="30dp"
	  	android:background="@drawable/new_button_background"		  	
	  	android:layout_alignParentRight="true"
	  	android:layout_centerVertical="true"
	  	android:textSize="13sp"
	  	android:text = "Sterge"  		
		android:focusable="false"
		android:focusableInTouchMode="false"	  		
	  	android:textColor="#575757"
	  	android:drawableLeft="@drawable/ic_but_remove"
	  	android:paddingLeft="7dp"
	  	android:paddingRight="7dp"
	  	android:drawablePadding="5dp"
	  	android:layout_marginRight="5dp"		
	  	android:gravity="left|center_vertical"/>
	  <View
	  	android:id = "@+id/line2"
	  	android:layout_width="fill_parent"	
	  	android:layout_height="1dp"
	  	android:layout_alignParentBottom="true"
	  	android:background="#dadada"
	  	android:layout_marginTop="5dp"/>	  		  		
  </RelativeLayout> 
  <View 
  	android:layout_width="fill_parent"
  	android:layout_height="2dp"
  	android:background="#ffffff"
  	android:layout_below="@id/lst_alert_actions_holder"
  	android:layout_alignWithParentIfMissing="true"/>
</RelativeLayout>
